{
    "manifest_version": 3,
    "name": "Rakuten CSV Downloader",
    "version": "1.0.1",
    "author": "Ishii Shigaku",
    "description": "Created on 2024-11-18.",
    "permissions": [
        "cookies",
        "scripting",
        "activeTab",
        "downloads",
        "contextMenus"
    ],
    "host_permissions": [
        "https://datatool.rms.rakuten.co.jp/*",
        "https://glogin.rms.rakuten.co.jp/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "favicon_io/favicon-16x16.png",
            "32": "favicon_io/favicon-32x32.png",
            "192": "favicon_io/android-chrome-192x192.png"
        }
    },
    "icons": {
        "16": "favicon_io/favicon-16x16.png",
        "32": "favicon_io/favicon-32x32.png",
        "192": "favicon_io/android-chrome-192x192.png"
    }
}